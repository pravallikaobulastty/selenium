package basicprograms;
import java.util.Scanner;
public class Newnumber {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("enter the digit=");
		int sum=0,a,b,num,a1,b1;
		num=scan.nextInt();
		a=num%10;//12345%10=5
		b=num/10;//1234
		a=a+1;//6
		sum=sum*10+a;//0*10+6=6
		a=b%10;
		b=b/10;
		a=a+1;
		sum=sum*10+a;//-->65
		a=b%10;
		b=b/10;
		a=a+1;
		sum=sum*10+a;//654
		a=b%10;
		b=b/10;
		a=a+1;
		sum=sum*10+a;
		a=b%10;
		a=a+1;
		sum=sum*10+a;
		System.out.println("New number="+sum);
	}

}
